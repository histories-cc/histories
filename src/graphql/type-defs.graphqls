type Query {
  hello: String!
  getUserInfo(input: GetUserInfoInput!): UserInfo
}
type Mutation {
  createUser(input: CreateUserInput!): String!
  deleteUser(input: DeleteUserInput!): String!
  follow(input: FollowInput!): String!
  unfollow(input: FollowInput!): String!
}

input FollowInput {
  from: String!
  to: String!
}

input DeleteUserInput {
  username: String!
  password: String!
}

input CreateUserInput {
  username: String!
  email: String!
  firstName: String!
  lastName: String!
  password: String!
}

input GetUserInfoInput {
  username: String!
}

type UserInfo {
  username: String!
  email: String!
  firstName: String!
  lastName: String!
  authenticated: String!
  created_at: String!
  following: [UserInfoMinimal]
  followers: [UserInfoMinimal]
}

type UserInfoMinimal {
  username: String!
  firstName: String!
  lastName: String!
  email: String!
}

type Query {
  getUserInfo(input: GetUserInfoInput!): UserInfo
}

type UserInfo {
  username: String!
  email: String!
  firstName: String!
  lastName: String!
  bio: String!
  authenticated: String!
  created_at: String!
  following: [UserInfoMinimal]
  followers: [UserInfoMinimal]
  collections: [Collection]
}

type UserInfoMinimal {
  username: String!
  firstName: String!
  lastName: String!
  email: String!
}

type Collection {
  collectionName: String!
  createdAt: String!
}
